<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Conference.Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="Conference.Web.Admin" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Context.ConferenceManagement" />
    </ConfigurationSettings>
  </WebRole>
  <WebRole name="Conference.Web.Public" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="8080" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Context.Payments" />
      <Setting name="Context.ConferenceRegistration" />
    </ConfigurationSettings>
  </WebRole>
  <WorkerRole name="WorkerRoleCommandProcessor" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Context.Payments" />
      <Setting name="Context.EventStore" />
      <Setting name="Context.ConferenceRegistrationProcesses" />
      <Setting name="Context.ConferenceRegistration" />
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>